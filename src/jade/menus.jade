include _mixin/mixin


doctype html
html


    +headSite('Меню тренинга', menus.styleLink, data.fontLink)


    body

        .container

            //- HEADER [logotype, navigation, {signIn, profile - btn} ]
            block header
                include _template/macros/_header


            .main
                .main__wrap

                    h1.main__title!= "Этапы путишествия"

                    block progressBar
                        include _template/_menus/progress

                    block progress
                        include _template/_menus/stage

            //- FOOTER
            block footer
                include _template/macros/_footer


        - for(var i = 0; i < menus.scriptLink.length; i++)
            script(src= menus.scriptLink[i])
