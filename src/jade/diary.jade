include _mixin/mixin


doctype html
html

    +headSite('Личный профиль', diary.styleLink, data.fontLink)


    body

        .container

            //- HEADER [logotype, navigation, {signIn, profile - btn} ]
            block header
                include _template/macros/_header


            .main.clearfix
                .main__left

                    include ./_template/_diary/_titleLeft

                    .diary__note

                        include ./_template/_diary/_noteLeft

                    .main__left-info.clearfix
                        span.bottom-info!= 'Всего записей <span class="bottom-info__total">24</span>. Показано <span class="bottom-info__left">4</span>-<span class="bottom-info__left">7</span>'

                        a(href="javascript:void(0);", class="btn-note__arrow btn-note__arrow_right")
                        a(href="javascript:void(0);", class="btn-note__arrow btn-note__arrow_left")


                .main__right
                    .main__right-wrap

                        include ./_template/_diary/_rightForm


            //- FOOTER
            block footer
                include _template/macros/_footer


        - for(var i = 0; i < diary.scriptLink.length; i++)
            script(src= diary.scriptLink[i])
