include _mixin/mixin


doctype html
html


    +headSite('Личный профиль', profile.styleLink, data.fontLink)


    body

        .container

            //- HEADER [logotype, navigation, {signIn, profile - btn} ]
            block header
                include _template/macros/_header


            .main
                .main__wrap

                    h1.main__title!= "Личный профиль"

                    form(action="", class="clearfix")

                        include ./_template/_profile/_data

                    h2.main__sub-title!= "Ваши цели"


                    include ./_template/_profile/_goals


                    button(type="submit", id="btn-submit" class="btn btn-add btn_big")!= "Добавить цель"


            //- FOOTER
            block footer
                include _template/macros/_footer


        - for(var i = 0; i < profile.scriptLink.length; i++)
            script(src= profile.scriptLink[i])
