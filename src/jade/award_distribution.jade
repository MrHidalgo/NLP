include _mixin/mixin


doctype html
html

    +headSite('Распределение симпатий', awardDistribution.styleLink, data.fontLink)


    body

        .container

            //- HEADER [logotype, navigation, {signIn, profile - btn} ]
            block header
                include _template/macros/_header


            .main.main_table.clearfix
                .main__left
                    .balls
                        p.balls__text!= 'Осталось'
                        p.balls__last!= '7 баллов'


                .main__right
                    .list
                        - for(var i = 0; i < 16; i++)
                            .list__block
                                .list__wrap-img
                                    img(src="./img/img-avatar_load.jpg", class='user-avatar')
                                .list__wrap-info
                                    if(i < 5)
                                        a(href="javascript:void(0);", class="btn-img-avatar btn-distribution")
                                            i.btn-distribution__hearth
                                .list__wrap-text
                                    p.list__name!= "Бойко Дмитрий Борисович"


            //- FOOTER
            block footer
                include _template/macros/_footer


        - for(var i = 0; i < awardDistribution.scriptLink.length; i++)
            script(src= awardDistribution.scriptLink[i])
