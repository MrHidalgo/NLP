include _mixin/mixin


doctype html
html


    +headSite('Страница тренера', startTrainer.styleLink, data.fontLink)


    body

        .container

            //- HEADER [logotype, navigation, {signIn, profile - btn} ]
            block header
                include _template/macros/_header_trainer


            .main
                .main__wrap
                    .list
                        - for(var i = 0; i < 15; i++)
                            .list__block
                                .list__wrap-img
                                    img(src="./img/img-avatar_load.jpg", class='user-avatar')
                                .list__wrap-info
                                    if(i < 10)
                                        a(href="javascript:void(0);", class="btn-img-avatar btn-trainer")
                                            i.btn-trainer__mail
                                            i.btn-trainer__warn
                                .list__wrap-text
                                    p.list__name!= "Бойко Дмитрий Борисович"




            //- FOOTER
            block footer
                include _template/macros/_footer


        - for(var i = 0; i < startTrainer.scriptLink.length; i++)
            script(src= startTrainer.scriptLink[i])
