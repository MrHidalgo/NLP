include _mixin/mixin


doctype html
html

    +headSite('Сообщество тренинга', community.styleLink, data.fontLink)


    body

        .container

            //- HEADER [logotype, navigation, {signIn, profile - btn} ]
            block header
                include _template/macros/_header


            .main.main_table.clearfix
                .main__left

                    h1.main__title.main__title_community!= "Сообщество"

                    include ./_template/_community/_noteLeft

                .main__right.main__right_community
                    .main__right-wrap

                        include ./_template/_community/_rightForm

                        h2.main__sub-title.main__sub-title_community!= "Инсайт лента"

                        include ./_template/_community/_chat


            //- FOOTER
            block footer
                include _template/macros/_footer


        - for(var i = 0; i < community.scriptLink.length; i++)
            script(src= community.scriptLink[i])
